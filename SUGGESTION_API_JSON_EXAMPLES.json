        "body_full": {
          "text": "Add dark mode and light mode toggle feature",
          "solution": "Implement a theme toggle in user settings with system preference detection"
        },
        "body_text_only": {
          "text": "Updated suggestion text"
        },
        "body_solution_only": {
          "solution": "Updated solution text"
        }
      },
      "response_success": {
        "status": 200,
        "body": {
